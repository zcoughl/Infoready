<h1>Saved Mappings</h1>


<table align="center">
  <tr>
  	<th style="padding: 15px;">| Mapping ID | </th>
    <th style="padding: 15px;">Database | </th>
    <th style="padding: 15px;">Column Name | </th>
    <th style="padding: 15px;">Column Type | </th>
    <th style="padding: 15px;">Database 2 | </th>
    <th style="padding: 15px;">Column Name 2 | </th>
    <th style="padding: 15px;">Column Type 2 | </th>
  </tr>
 
  <% @mappings.each do |mapping| %>
    <tr>
      <td align="center"><%= mapping.id %></td>
      <td align="center"><%= mapping.database %></td>
      <td align="center"><%= mapping.colname %></td>
      <td align="center"><%= mapping.coltype %></td>
      <td align="center"><%= mapping.database2 %></td>
      <td align="center"><%= mapping.colname2 %></td>
      <td align="center"><%= mapping.coltype2 %></td>
      <td style="padding-right: 15px;" align="center"><%= link_to 'Show', mapping_path(mapping) %></td>
      <td style="padding-right: 15px;" align="center"><%= link_to 'Edit', edit_mapping_path(mapping) %></td>
      <td style="padding-right: 15px;" align="center"><%= link_to 'Destroy', mapping_path(mapping),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<br>
<p style="padding-right: 70px;" align="right">
<%= link_to '<button type="button">New Mapping</button>'.html_safe, new_mapping_path %>
</p>