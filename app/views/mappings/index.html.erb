<h1>Saved Mappings</h1>


<%= link_to 'New mapping', new_mapping_path %>
<table>
  <tr>
  	<th>| Mapping id | </th>
    <th>  Database 1 |</th>
    <th>  Database 2  </th>


  </tr>
 
  <% @mappings.each do |mapping| %>
    <tr>

      <td><%= mapping.id %></td>
      <td><%= mapping.database1 %></td>
      <td><%= mapping.database2 %></td>

      <td><%= link_to 'Show', mapping_path(mapping) %></td>
      <td><%= link_to 'Edit', edit_mapping_path(mapping) %></td>
      <td><%= link_to 'Destroy', mapping_path(mapping),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<br>
<p style="padding-right: 70px;" align="right">
<%= link_to '<button type="button">New Mapping</button>'.html_safe, new_mapping_path %>
</p>