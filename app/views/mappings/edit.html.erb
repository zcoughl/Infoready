<% provide(:title, "Select") %>

<div class = "jumbotron">
<h1> Editing Mapping </h1>

<%= form_for :mapping, url: mapping_path(@mapping), method: :patch do |f| %>
<table align="center">
  <tr>
    <td>
        <%= f.label :Database %>
        <%= f.text_field :database1, :required => 'required' %> 

         
    </td>
    <td class="spacer" width = "50">
    <td>
        <%= f.label :Database %>
        <%= f.text_field :database2, :required => 'required' %> 
    </td>
  </tr>
  <tr>
    <td align="center" colspan="3">
        <button class ="btn btn-default">Update Mapping</button>
    </td>
  </tr>
</table>
<% end %>
</div>

<button class="btn btn-default"><%= link_to 'Back', mappings_path %></button>