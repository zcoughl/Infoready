<% provide(:title, @user.name) %>

    <div class="upper-wrapper">
        <div class="container">
        <div class="row">
        <div class="col-md-3 col-sm-3">
            <%= gravatar_for @user %>
        </div>
        <div class="col-md-9 col-sm-9 ">
      	<div class="user-session">
        	<div class="row">
                <div class="username" style="font-size:2em; margin-bottom:15px;">
                    <%= @user.name %>
                </div>
            </div>
            <div class="row">
                <div class="user-info" style="margin-bottom:15px; color:grey;">
        	   <!--<%= image_tag("icon-building.png",:alt=>"icon-building")%>-->
