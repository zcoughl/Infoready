                <ol style="padding-left:20px; padding-right:20px;">
                <% @mappings.each do |mapping| %>
                
                    <div class="row">
                        <div class="col-sm-4">
                        <%= mapping.created_at%>
                        </div>
                        <div class="col-sm-8" style="text-align:left;">
                        created mapping between   
                        <%= mapping.database1%>
                         and 
                        <%= mapping.database2%>
                        </div>
                    </div>
                    <hr class="small">
                <%end%>
                </ol>
                
