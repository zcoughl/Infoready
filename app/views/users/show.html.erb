<% provide(:title, @user.name) %>
<div class="container">
<div class="row">
    <div class="col-md-12 col-sm-12 ">
      	<div class="user-wrapper">
        	
        	<div class="col-md-4">
        		<%= image_tag("icon-photo.png",:alt=>"profile-photo")%>
        		<%= link_to "Edit Profile", edit_path(:id=>@user.id), class: "btn btn-primary" %>
        	</div>
        	<div class="col-md-8">
        		<h1>
        			<%= @user.name %>
        		</h1>

        		<div class="row">
        			<%= image_tag("icon-building.png",:alt=>"icon-building")%>
        			<%= @user.company%>
        		</div>
        		<div class="row">
        			<%= image_tag("icon-mail.png",:alt=>"icon-mail")%>
        			<%= @user.email%>
        		</div>
        	</div>
        		
        	<div class="row">
        	<hr>
        	</div>
        </div>
    </div>
    <div class="row">
    </div>

    <div class="col-md-12 col-sm-12">
    	<div class="activity-wrapper">
            <div class="row">
    		  <h3>Manage Data Sources</h3>
            </div>
            <ol class="datasources">
                
                <% @datasources.each do |source| %>
                <table>
                    <tr>
                        <td><b><%= source.source_name%> </b></td>
                        <td><%= source.account%></td>
                    </tr>
                </table>
                <%end%>
                <div class="row">
                <br>
                <%= link_to "Add datasource", datasource_path(:id=>@user.id), class: "btn btn-primary" %>
                </div>
            </ol>

    	</div>
    </div>
</div>
</div>